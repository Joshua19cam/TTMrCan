            <TextView
                android:id="@+id/tvConfirmarContrasenaEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/mulish_bold"
                android:text="Confirmar contraseña"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etConfirmarContrasenaEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:fontFamily="@font/mulish_bold"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonCancelarEditarPerfilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/boton_redondo_rojo"
        android:fontFamily="@font/nunito"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_close"

        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonGuardarEditarPerfilUsuario"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonGuardarEditarPerfilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/boton_redondo_azul"
        android:fontFamily="@font/nunito"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_save"

        app:iconTint="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCancelarEditarPerfilUsuario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

