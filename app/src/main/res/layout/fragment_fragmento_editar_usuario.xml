                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCiudadEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/mulish_bold"
                android:text="Ciudad"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etCiudadEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:fontFamily="@font/mulish_bold"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvColoniaEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/mulish_bold"
                android:text="Colonia"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etColoniaEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:fontFamily="@font/mulish_bold"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCPEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
