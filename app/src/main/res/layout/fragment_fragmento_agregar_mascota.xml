<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentoAgregarMascota">

    <TextView
        android:id="@+id/textAñadirM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Añadir mascota"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imagenMascota"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginTop="497dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gallery1"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="348dp"
        android:layout_height="0dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNombreA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="15dp"
                android:text="Nombre de la mascota"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editNombreMascotaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=" "
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textSexoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="15dp"
                android:text="Sexo"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/sexoSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textColorA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="15dp"
                android:text="Color"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editColorMascotaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textRazaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="15dp"
                android:text="Raza"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editRazaMascotaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textNacimientoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="15dp"
                android:text="Fecha de nacimiento"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editFechaMascotaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_azul"
                android:ems="10"
                android:hint="AAAA-MM-DD"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:background="@drawable/boton_redondo_azul"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_save"
        app:iconTint="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCancelar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenMascota"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:background="@drawable/boton_redondo_rojo"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_close"
        app:iconTint="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonGuardar"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>